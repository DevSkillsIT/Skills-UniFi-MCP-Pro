# Sample environment configuration for UniFi Network MCP server
# Copy this file to `.env` and fill in real credentials.

UNIFI_HOST=192.168.1.1
UNIFI_USERNAME=admin
UNIFI_PASSWORD=changeme
UNIFI_PORT=443
UNIFI_SITE=default
UNIFI_VERIFY_SSL=false
UNIFI_CONTROLLER_TYPE=auto
UNIFI_AUTO_CONFIRM=false
UNIFI_TOOL_REGISTRATION_MODE=lazy
# Comma-separated list when using eager registration
UNIFI_ENABLED_CATEGORIES=clients,devices,events,network,stats,system,config
# Optional explicit tool allowlist
# UNIFI_ENABLED_TOOLS=
UNIFI_MCP_HTTP_ENABLED=false
UNIFI_MCP_HTTP_HOST=0.0.0.0
UNIFI_MCP_HTTP_PORT=3000
# Force HTTP SSE even quando o processo não é PID 1 (ex.: pm2/systemd)
UNIFI_MCP_HTTP_FORCE=false
CONFIG_PATH="src/config/config.yaml"

# Optional logging level
LOG_LEVEL=INFO
